<div id="vue-template" v-cloak>

    <div v-if="applicationId === 'template'" class="grid-70 push-30 mobile-grid-100">
        <div class="grid-row">
            <tabs>
                <tab id="template" title="{{ 'template' | trans }}">
                    {% include 'projects/template/tab_template.html.twig' %}
                </tab>
            </tabs>
        </div>
    </div>

    <modal ref="dlgEditTemplate" header="{{ 'template.edit' | trans }}" @submit="updateTemplate">
        {% include 'projects/template/dlg_template.html.twig' with { new: false } %}
    </modal>

</div>
